<h1>Profile Page</h1>

<h2></h2>

<% if @current_user.present? %>

 <%= link_to "edit profile", edit_user_path(@current_user) %>
 |
 <%= link_to "new post", new_post_path %>
 |
 <%= link_to "edit post", new_post_path %>
 |
 <%= link_to "other users", users_path %>
 |
 <%= link_to "sign out #{ @current_user.name }", login_path, :method => 'delete' %>

<% else %>

  <%= link_to 'login', login_path %>

<% end %>

<br>

<% if @user.image.nil? %>
  <%= image_tag 'default-header.jpg', :size => '600x600' %>
<% else %>
  <% image_tag @user.image.banner %>
<% end %>

<br>

<% if @user.id == @current_user.id %>
  Welcome back <%= @user.name %>
<% else %>
  <%= @user.name %>
<% end %>

<% if @user.profile.nil? %>
  <%= image_tag 'default-profile.png', :size => '50x50' %>
<% else %>
  <% image_tag @user.profile.thumb %>
<% end %>
