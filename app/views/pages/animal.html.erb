                    <%= link_to 'sign up', new_user_path %>
                </div>
                |
                <div class="user-links">
                    <%= link_to 'login', login_path %>
                </div>
                <div class="user-links">
                    <%= link_to 'home', root_path %>
                </div>
                |
                <% end %>
                
    </div>
    <%= image_tag "home/logo.png", :class => "logo" %>
</nav>


