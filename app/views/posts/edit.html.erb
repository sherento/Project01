
<h1>Update post</h1>

<% if @post.id == @current_user.id %>

    <%= form_for @post, :class => "form-horizontal" do |f| %>

        <% if @post.errors.any? %>
            <div id="error_explanation">
                <h3>
                    <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
                <ul>
                    <% @post.errors.full_messages.each do |message| %>
                        <li>
                            <%= message %>
                        </li>
                        <% end %>
                </ul>
            </div>
            <% end %>

                <div class="form-group" style="margin: 0 auto; max-width: 400px">
                    <%= f.label :title %> <br>
                        <%= f.text_field :title, :class => "form-control" %>
                </div>

                <div class="form-group" style="margin: 0 auto; max-width: 400px">
                    <%= f.label :image %> <br>
                        <%= f.file_field :image, :class => "form-control" %>
                </div>

                <div class="form-group" style="margin: 0 auto; max-width: 400px">
                    <%= f.label :caption %> <br>
                        <%= f.text_area :caption, :class => "form-control" %>
                </div>

                <label></label>
                <div class="button" style="text-align: center">
                    <fieldset class="actions">
                        <label></label>
                        <%= f.submit 'update me!'%>
                    </fieldset>
                </div>

                <% end %>
                    <% end %>
