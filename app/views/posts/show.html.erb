<h2>posts..</h2>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Image:</strong>
  <% if @post.photograph.nil? %>
    <%= image_tag 'default-post.jpg', :size => '200x200' %>
  <% else %>
  <%= image_tag(@post.photograph) %>
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.caption %>
</p>

<p>
  <strong>Comments</strong>
  <%= form_for [@post, @post.comments.new] do |f| %>
    <%= f.text_field :content, placeholder: 'Add a comment...' %>
  <% end %>
  <button class="glyphicon glyphicon-heart-empty"></button>
  <button class="glyphicon glyphicon-cutlery"></button>
  <button class="glyphicon glyphicon-sunglasses"></button>
  <button>add comment</button>
</p>

<!-- glyphicon glyphicon-heart -->



<% if @post.user.id == @current_user.id %>
  <%= link_to 'edit', edit_post_path(@post.id) %>
  |
  <%= link_to 'delete', post_path(@post.id), :method => 'delete'  %>
<% end %>
